.login-page
    box-sizing: border-box
    padding: 78rpx 30rpx 0 30rpx
    height: 100%
    background: #fff
    font-size: 32rpx
    .logo
        display: block
        margin: 0 auto
        width: 140rpx
        height: 140rpx
    .system-name
        margin: 36rpx auto 86rpx auto
        text-align: center
        font-size: 44rpx
        font-weight: 500
        color: #333
    .inp-con
        display: flex
        align-items: center
        border-bottom: 1rpx solid #ddd
        .inp
            flex: 1;
            padding: 0 0 0 20rpx
            width: 100%
            height: 88rpx
        .inp-icon
            flex: 0 0 32rpx
            margin: 0 20rpx 0 0
            height: 32rpx
        .get-code
            flex: 0 0 160rpx
            margin: 0 20rpx 0 0
            color: $primaryColor
    .bottom-part
        display: flex
        align-items: center
        font-size: 28rpx
        label
            flex: 1;
            vertical-align: center
        .forgot
            flex: 0 0 140rpx
            color: $primaryColor
.user-info
    display: flex
    padding: 25rpx 40rpx
    height: 150rpx
    background: rgba(255,255,255,1)
    box-shadow: 0px -1px 0px 0px rgba(229,229,229,1)
    box-sizing: border-box
    .image-box
        flex: 0 0 100rpx
        align-items: center
        margin-right: 28rpx
        height: 100rpx
        border-radius: 8rpx
        image
            width: 100%
            height: 100%
    .info-main
        flex: 1
        font-size: 32rpx
        color: #333
        .tel
            display: block
            line-height: 40rpx
            font-size: 28rpx
            color: #666
	.password
		display: flex
		margin: 24rpx 0 36rpx 0
		padding: 0 30rpx
		height: 90rpx
		line-height: 90rpx
		color: #000
		font-size: 36rpx
		background:rgba(255,255,255,1)
		text
			flex: 1
		icon
			flex: 0 0 20rpx
			font-size: 28rpx
			color: #C7C7CC
.btn, .btn1
    display: block
    margin: 0 auto
    width: calc(100% - 80rpx)
    border-radius: 10rpx
    background: #8991E1
    font-size: 36rpx
    color: #fff
